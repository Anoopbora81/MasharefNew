<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="5dp"

        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/owner_image_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="24dp">

            <ImageView
                android:id="@+id/owner_thumbnail"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:contentDescription="@null"
                android:src="@mipmap/ic_avatar" />


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/info_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="10dp"

            android:layout_toRightOf="@+id/owner_image_layout"
            android:orientation="vertical">

            <TextView
                android:id="@+id/owner_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sam pinto"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/villa_number_lbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:text="@string/villa_no"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/villa_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:text="101"

                android:textSize="14sp" />

            <TextView
                android:id="@+id/phase_number_lbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:text="@string/phase_no"
                android:textColor="@android:color/darker_gray"
                android:textStyle="bold"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/phase_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:text="100"
                android:textSize="14sp" />
        </LinearLayout>


    </RelativeLayout>



</RelativeLayout>