            android:text="@string/forgot_password_en" />-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="35dp"
            android:paddingRight="55dp"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:text="@string/forgot_password_en" />

            <TextView
                android:id="@+id/forgetPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:textColor="#51b7cf"
                android:textStyle="bold"
                android:layout_marginTop="15dp"
                android:text="@string/forgot_click" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="15dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp">
            <View
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:layout_weight="2"
                android:background="@color/white"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/white"
                android:text="@string/or"
                android:layout_weight="1"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0.5dp"
                android:layout_weight="2"
                android:background="@color/white"
                android:layout_gravity="center"/>


        </LinearLayout>
        <Button
            android:id="@+id/register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:textColor="@color/white"
            android:background="@color/button_deactive"
            android:text="@string/register" />


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/multi_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@+id/login_button_layout">

        <ImageView
            android:id="@+id/multi_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/globe" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ar"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/multi_image"
            android:textColor="@color/white"
            />

    </RelativeLayout>

            </RelativeLayout>
