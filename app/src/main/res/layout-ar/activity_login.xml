            <RelativeLayout
                android:layout_alignParentEnd="true"
                android:layout_marginTop="8dp"
                android:layout_width="105dp"
                android:background="@drawable/border"
                android:layout_alignBottom="@+id/villa_no_inp"
                android:layout_centerVertical="true"
                android:layout_marginBottom="5dp"
                android:layout_height="45dp">

                <Spinner
                    android:layout_alignParentRight="true"
                    android:id="@+id/spinnerVillaNumLogin"
                    android:theme="@style/Theme.App.SpinnerBroder"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/user_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:contentDescription="@null"
                android:src="@mipmap/user_ic" />

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:theme="@style/Theme.App.Base"
                android:textColorHint="@color/white"
                android:layout_toLeftOf="@+id/user_icon"
                android:layout_marginRight="20dp">
                <EditText
                    android:id="@+id/user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:hint="@string/user_name"
                    android:textColor="@color/white"
                    android:layout_marginBottom="5dp"/>
            </android.support.design.widget.TextInputLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/pass_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:contentDescription="@null"
                android:src="@mipmap/password_ic" />
            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:theme="@style/Theme.App.Base"
                android:textColorHint="@color/white"
                android:layout_toLeftOf="@+id/pass_icon"
                android:layout_marginRight="20dp">
                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPassword"
                    android:ems="10"
                    android:hint="@string/password"
                    android:textColor="@color/white"
                    android:layout_marginBottom="5dp"/>
            </android.support.design.widget.TextInputLayout>

        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/login_button_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/content_layout"
        android:orientation="vertical"
        android:paddingTop="5dp"
        android:paddingLeft="35dp"
        android:paddingRight="35dp"
        android:paddingBottom="35dp">

        <Button
            android:id="@+id/login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/tv"
            android:layout_alignStart="@+id/register"
            android:background="@color/button_active"
            android:textColor="@color/white"
            android:text="@string/login" />

        <!--<TextView
            android:id="@+id/forgetPassword"
