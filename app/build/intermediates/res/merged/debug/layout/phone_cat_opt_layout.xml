<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
   >

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="102dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        card_view:cardCornerRadius="6dp"
        card_view:contentPadding="10dp"
        card_view:cardElevation="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:foregroundGravity="center"
                android:layout_alignParentStart="true"
                android:src="@mipmap/ic_avatar"
                android:id="@+id/imageViewCategeoryOptCard" />

            <TextView
                android:layout_marginLeft="10dp"
                android:text="TextViewName"
                 android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/imageViewCategeoryOptCard"
                android:id="@+id/textViewCategeoryOptName"
                android:maxLines="1"
                android:ellipsize="end"
                style="@style/M_TextViewLabelStyle"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"/>

            <LinearLayout
                android:id="@+id/rating_barLayout"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@+id/imageViewCategeoryOptCard"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewCategeoryOptName">
                <ImageView
                    android:id="@+id/star_image1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/star_not_filled"
                    android:layout_marginLeft="3dp"/>
                <ImageView
                    android:id="@+id/star_image2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/star_not_filled"
                    android:layout_marginLeft="3dp"/>
                <ImageView
                    android:id="@+id/star_image3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/star_not_filled"
                    android:layout_marginLeft="3dp"/>
                <ImageView
                    android:id="@+id/star_image4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/star_not_filled"
                    android:layout_marginLeft="3dp"/>
                <ImageView
                    android:id="@+id/star_image5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/star_not_filled"
                   />

            </LinearLayout>
         <!--   <TextView
                android:text="TextViewDesignation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_below="@+id/textViewCategeoryOptName"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/imageViewCategeoryOptCard"
                android:id="@+id/textViewCategeoryOptDesignation" />-->

            <TextView
                android:text="TextViewWorkspace"
                 android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/rating_barLayout"
                android:layout_toRightOf="@+id/imageViewCategeoryOptCard"
                android:id="@+id/textViewCategeoryOptWorkspace"
                style="@style/M_TextViewFieldStyle"
                android:maxLines="1"

                android:ellipsize="end" />
            <TextView
                android:text="TextViewNumber"
                 android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_below="@+id/textViewCategeoryOptWorkspace"
                android:layout_toRightOf="@+id/imageViewCategeoryOptCard"
                android:id="@+id/textViewCategeoryOptPhNo"
                style="@style/M_TextViewFieldStyle"
                android:layout_marginLeft="10dp"/>

            <View
                android:layout_width="1dp"
                android:layout_toLeftOf="@+id/phoneCatOpt"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:background="@color/list_row_color2"/>
            <!--contacts_list__color-->

   <!--         <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_alignParentEnd="true"
                style="?android:attr/ratingBarStyleSmall"
                android:id="@+id/ratingBarCatOpt"></RatingBar>-->
            <!--style="?android:attr/ratingBarStyleSmall"   style="@style/myRatingBar"  -->
            <ImageView
                android:id="@+id/phoneCatOpt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_phone_c"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                />
         <!--   <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:orientation="vertical"
                >
                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   android:layout_marginTop="5dp"
                    style="?android:attr/ratingBarStyleSmall"
                    android:id="@+id/ratingBarCatOpt" />
                <ImageView
                    android:id="@+id/phoneCatOpt"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="30dp"
                    android:src="@drawable/del_phone"
                    />
            </LinearLayout>-->

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>
